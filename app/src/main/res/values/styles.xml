<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="android:background">@color/purple_200</item>
        <item name="contentInsetStart">16dp</item>
        <item name="maxButtonHeight">?attr/actionBarSize</item>
    </style>

    <style name="Toolbar.Activity" parent="Toolbar">
        <item name="android:displayOptions">none</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:titleTextAppearance">@style/H3</item>
    </style>

    <style name="H3">
        <item name="android:textSize">@dimen/h3_textsize</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorCloudy</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/purple_200</item>
        <item name="tabTextAppearance">@style/TabLayoutStyle</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TabLayoutStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Body">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

</resources>